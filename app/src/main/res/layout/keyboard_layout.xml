<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryButton"
        android:descendantFocusability="blocksDescendants"
        android:paddingTop="1dp">
        <FrameLayout
            android:id="@+id/history_list_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/history_list_height"
            android:descendantFocusability="blocksDescendants"
            android:background="@android:color/white"
            >
            <ListView
                android:id="@+id/history_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_list_height"
                android:descendantFocusability="blocksDescendants"
                />
            <TextView
                android:id="@+id/no_items_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_list_height"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/emptyListTextColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="@string/no_items_in_the_history"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center"
            android:layout_alignBottom="@id/history_list_frame"
            android:background="@color/errorBackground"
            android:textColor="@color/errorTextColor"
            style="@android:style/TextAppearance.Small"
            android:lines="2"
            />
    </RelativeLayout>
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keyBackground="@drawable/btn_background"
        />

</LinearLayout>